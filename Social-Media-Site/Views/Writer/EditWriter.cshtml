@model EntityLayer.Concrete.Writer
@{
    ViewBag.Title = "EditWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="text-center">Yazar Güncelleme</h1>
<br />




@using (Html.BeginForm("EditWriter", "Writer", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.HiddenFor(w => w.WriterID, new { @class = "form-control" })
        @Html.TextBoxFor(x => x.WriterID, new { @class = "form-control" })
        @Html.HiddenFor(w => w.WriterPassword, new { @class = "form-control" })
        @Html.HiddenFor(w => w.WriterPassword, new { @class = "form-control" })
        <br />
        @Html.Label("Yazar Adı")
        @Html.DisplayNameFor(Model => Model.WriterName)
        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterName, "", new { @style = "color:red" })
        <br />
        @Html.Label("Yazar Soyadı")
        @Html.DisplayNameFor(Model => Model.WriterSurName)
        @Html.TextBoxFor(x => x.WriterSurName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterSurName, "", new { @style = "color:red" })
        <br />
        @Html.Label("Yazar Maili")
        @Html.DisplayNameFor(Model => Model.WriterMail)
        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterMail, "", new { @style = "color:red" })
        <br />
        @Html.Label("Yazar Görsel Linki")
        @Html.DisplayNameFor(Model => Model.WriterImage)
        @Html.TextBoxFor(x => x.WriterImage, new { @class = "form-control" })
        @Html.TextBoxFor(Model => Model.WriterImage, new { type = "file", @id = "WriterImage" })
        @Html.ValidationMessageFor(x => x.WriterImage, "", new { @style = "color:red" })
        <br />
        @Html.Label("Yazar Ünvan")
        @Html.DisplayNameFor(Model => Model.WriterTitle)
        @Html.TextBoxFor(x => x.WriterTitle, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterTitle, "", new { @style = "color:red" })
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.DisplayNameFor(Model => Model.WriterAbout)
        @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterAbout, "", new { @style = "color:red" })
        <br />
        <button class="btn btn-success text-center">Değişiklikleri Uygula</button>
    </div>
}