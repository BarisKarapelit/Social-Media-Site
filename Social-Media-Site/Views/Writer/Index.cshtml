@using EntityLayer.Concrete
@model EntityLayer.Concrete.Writer
 
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

    }
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.WriterID)</th>
            <th>@Html.DisplayNameFor(model => model.WriterName)</th>
            <th>@Html.DisplayNameFor(model => model.WriterSurName)</th>
            <th>@Html.DisplayNameFor(model => model.WriterMail)</th>

        </tr>

        @foreach (var writer in  ViewBag.writerValues)
        {
            <tr>
                <td>
                    @writer.WriterID
                </td>
                <td>
                    @writer.WriterName
                </td>
                <td>
                    @writer.WriterSurName
                </td>
                <td>
                    @writer.WriterMail
                </td>
            </tr>
        }
        </table>

