@model EntityLayer.Concrete.Category
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<!-- #region Add V1 -->
<h1 class="text-center">Yeni Kategori Ekleme Sayfası</h1>
<br />


<form class="form-control form-control-lg text-center border-success " method="post">
    <br />
    <br />

    <input class="border-success" type="text" name="CategoryName" value="" placeholder="Kategori Adı" />
    <br />
    <br />

    <input class="border-success" type="text" name="CategoryDescription" value="" placeholder="Kategori Açıklaması" />
    <br />
    <br />

    <input class="form-check-input " name="CategoryStatus" type="checkbox" value="true" id="flexCheckDefault">
    <label class="form-check-label" for="flexCheckDefault">
        Durum
    </label>
    <br />
    <br />

    <button class="btn btn-group btn-lg btn-outline-success">Ekle</button>
    <br />
    <br />

</form>
<!-- #endregion -->

@using (Html.BeginForm("AddCategory","Category",FormMethod.Post))
  {
<div class="form-group">
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName)
    @Html.ValidationMessageFor(x=>x.CategoryName)
    <br /><br />
    @Html.Label("Açıklamayı Yazınız")
    @Html.TextBoxFor(x => x.CategoryDescription)
    @Html.ValidationMessageFor(x=>x.CategoryDescription)
    <br /><br />
    @Html.Label("Durum Seçiniz")
    @Html.CheckBoxFor(x => x.CategoryStatus)
    <br /><br />

    <button class="btn btn-info">Kaydet</button>


</div>
}

