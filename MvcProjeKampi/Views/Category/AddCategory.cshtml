@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h1 class="text-center">Yeni Kategori Ekleme Sayfası</h1>
<br />
<div class="container">
    <div class="row">
        <form class="form-group" method="post">

            <input type="text" name="CategoryName" value="" placeholder="Kategori Adı" />
            <br />
            <input type="text" name="CategoryDescription" value="" placeholder="Kategori Açıklaması" />
            <br />
            <label class="form-check-label" for="flexCheckDefault">
                Aktif
            </label>
            <input class="form-check-input" name="CategoryStatus" type="checkbox" value="True" id="flexCheckDefault">
            
            <br />
            <button class="btn btn-info">Ekle</button>
        </form>
    </div>

</div>
