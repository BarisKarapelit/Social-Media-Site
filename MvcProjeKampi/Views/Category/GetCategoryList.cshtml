@using EntityLayer.Concrete
@*@model List<Category>*@
@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "Category List";
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<br />
<table class="table table-bordered table-hover text-center">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryID)

        </th>
        <th>
            
             @Html.DisplayNameFor(model=>model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryStatus)

        </th>
        <th>
            Güncelle
        </th>
    </tr>
    @foreach (var category in ViewBag.categoryvalues)
    {
        
        <tr>
            <td>@category.CategoryID</td>
            <td>@category.CategoryName</td>
            <td>@category.CategoryDescription</td>
            <td>@category.CategoryStatus</td>
            <td><button class="btn btn-info">Güncelle</button></td>

        </tr>
        
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-info">Yeni Kategori</a>
